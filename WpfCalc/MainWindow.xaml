<Window x:Class="WpfCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCalc"
        mc:Ignorable="d"
        Title="MainWindow" Height="319" Width="373">
    <Grid Margin="0,0,0,-16">
        <TextBox x:Name="tbOut" HorizontalAlignment="Center" Margin="0,33,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="294" Height="30"/>
        <Button x:Name="btNum1" Content="1" HorizontalAlignment="Left" Margin="76,108,0,0" VerticalAlignment="Top" Height="36" Width="40" Click="btNum1_Click"/>
        <Button x:Name="btNum2" Content="2" HorizontalAlignment="Left" Margin="136,108,0,0" VerticalAlignment="Top" Height="36" Width="38" Click="btNum2_Click"/>
        <Button x:Name="btAdd" Content="+" HorizontalAlignment="Left" Margin="284,108,0,0" VerticalAlignment="Top" Height="36" Width="37" Click="btAdd_Click"/>
        <Button x:Name="btResult" Content="=" HorizontalAlignment="Left" Margin="40,244,0,0" VerticalAlignment="Top" Height="38" Width="34" Click="btResult_Click"/>
        <Button x:Name="btReset" Content="C" HorizontalAlignment="Left" Margin="96,244,0,0" VerticalAlignment="Top" Height="38" Width="36" Click="btReset_Click"/>
    </Grid>
</Window>
